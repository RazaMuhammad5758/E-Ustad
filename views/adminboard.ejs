<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Board</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Optional: Your custom stylesheet -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h1 class="text-center mb-4">Admin Board</h1>

        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">All Users</h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>User Role</th>
                                <th>Profile</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.fullName %></td>
                                    <td><%= user.email %></td>
                                    <td><span class="badge bg-info text-dark"><%= user.userRole %></span></td>
                                    <td><img src="<%= user.profileImageUrl %>" alt="Profile" class="rounded-circle" width="50" height="50"></td>
                                    <td>
                                        <a href="/user/profile/<%= user._id %>" class="btn btn-sm btn-outline-primary">View</a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="/user/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <!-- Bootstrap JS (optional but good for components like modals) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
