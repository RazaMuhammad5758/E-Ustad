<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="500px">
        <p><%= blog.body %></p>
    </div>

    <div class="container mt-4">
        
        <img src="<%= blog.createdBy.profileImageUrl %>" width="50px"><%= blog.createdBy.fullName %>
        
    </div>

    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" name="content" id="" placeholder="Enter your comment">
                    <button class="btn btn-sm btn-primary">Add</button>
                </div>
            </form>
            
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <img src="<%= comment.createdBy.profileImageUrl %>" width="50px">: <pre><%= comment.content %></pre>
                
            <% }) %>
        </div>
    </div>

    

    <%- include('./partials/scripts') %>
</body>
</html>