<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Professionals</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3 d-flex flex-row gap-3">
        <% blogs.forEach(blog => { %>
            <div class="card" style="width: 18rem;">
                <!-- Show only the first image from the coverImageURL array -->
                <img src="<%= blog.coverImageURL[0] %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">View More</a>
                </div>
            </div>
        <% }) %>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
